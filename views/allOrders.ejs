<%- include('header',{title: 'All Orders'}) %> <%- include('adminNavbar') %>
<div class="container">
  <div class="row my-4">
    <div class="col text-center"><h1>List of All Orders</h1></div>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-11 col-lg-8 contentBox p-4">
      <div class="row">
        <div class="col"><h4>Unassigned Orders</h4></div>
      </div>
        <div class="row staffSchedule bg-light p-3">
        <div class="col">
      <div class="row fw-bold">
        <div class="col">Order Date</div>
        <div class="col-4">Customer Name</div>
        <div class="col-3">Model No.</div>
        <div class="col">Actions</div>
      </div>
      <% unassigned.forEach((x)=>{ %>
      <div class="row">
        <div class="col"><%= moment(x.order_date).format('Do MMM YYYY') %></div>
        <div class="col-4"><%= x.customer_name %></div>
        <div class="col-3"><%= x.model_number %></div>
        <div class="col">
          <a href="/ordersList/<%= x.id %>">View</a> |
          <a href="/ordersList/edit/<%= x.id %>">Edit</a> |
          <a href="/ordersList/remove/<%= x.id %>">Delete</a>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
    </div>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-11 col-lg-8 contentBox p-4">
      <div class="row">
        <div class="col"><h4>Assigned Orders</h4></div>
      </div>
        <div class="row staffSchedule bg-light p-3">
        <div class="col">
      <div class="row fw-bold">
        <div class="col">Order Date</div>
        <div class="col-4">Customer Name</div>
        <div class="col-3">Model No.</div>
        <div class="col">Actions</div>
      </div>
      <% assigned.forEach((x)=>{ %>
      <div class="row">
        <div class="col"><%= moment(x.order_date).format('Do MMM YYYY') %></div>
        <div class="col-4"><%= x.customer_name %></div>
        <div class="col-3"><%= x.model_number %></div>
        <div class="col">
          <a href="/ordersList/<%= x.id %>">View</a>
          <% if(x.completed){ %>
            (Completed)
          <% } else { %>
          |
          <a href="/ordersList/edit/<%= x.id %>">Edit</a>
          <% } %> 
          </form>
        </div>
      </div>
      <% }) %>
        </div>
        </div>
    </div>
  </div>
</div>

<%- include('footer') %>
