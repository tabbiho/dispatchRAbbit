<%- include('header',{title: 'Create Order'}) %> <%- include('adminNavbar') %>
<div class="container">
  <div class="row my-4">
    <div class="col text-center"><h1>Create New Order</h1></div>
  </div>
  <div class="row justify-content-center">
    <div class="col-11 col-lg-8 contentBox p-4">
      <form action="/orderZip" method="POST">
        <div class="row my-3">
          <label for="zipcode" class="form-label">Delivery Zipcode</label>
          <div class="col-8 col-lg-6">
            <input
              type="number"
              class="form-control"
              id="zipcode"
              name="zipcode"
            />
          </div>
          <div class="col-2">
            <button type="submit" class="btn btn-danger">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('footer') %>
