<%- include('header',{title: 'Confirm Deletion'}) %> <%- include('adminNavbar') %>
<div class="container">
  <div class="row my-4">
    <div class="col text-center">
      <h1>Confirm Deletion</h1>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-11 col-lg-8 contentBox p-4">
      <form
        action="/ordersList/remove/<%= orders_id %>?_method=DELETE"
        method="POST"
      >
        <label class="form-label"
          >Are you sure you want to delete this <strong>Order <%= orders_id %></strong>?</label
        ></br>
        <button type="submit" class="btn btn-danger">Confirm</button>
        <a href="#" onclick="history.go(-1)" class="btn btn-secondary">No, click here to go back</a>
      </form>
    </div>
  </div>
</div>
<%- include('footer') %>
